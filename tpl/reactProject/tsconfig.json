{
    "compilerOptions": {
        "allowJs": true,
        "outDir": "../build",
        "target": "es6",
        "sourceMap": true,
        "newLine": "lf",
        "preserveConstEnums": true,
        "stripInternal": true,
        "jsx": "react",
        "jsxFactory": "VNode.create",
        "experimentalDecorators": true,
        "noImplicitUseStrict": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "baseUrl": ".",
        "forceConsistentCasingInFileNames": true,
        "rootDir": ".",
        "paths": {
            "*": [
                "./components/*",
            ]
        },
        "lib": [
            "esnext",
            "dom"
        ]
    },
    "exclude": [
        "_*",
        ".*",
        "node_modules"
    ]
}
